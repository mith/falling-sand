{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'falling-sand'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=falling-sand",
                    "--package=falling-sand",
                    // "--features=bevy/trace_chrome"
                ],
                "filter": {
                    "name": "falling-sand",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "MANGOHUD": "1",
                "WINIT_UNIX_BACKEND": "wayland",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'falling-sand' (release)",
            "cargo": {
                "args": [
                    "build",
                    "--release",
                    "--bin=falling-sand",
                    "--package=falling-sand",
                    // "--features=bevy/trace_chrome"
                ],
                "filter": {
                    "name": "falling-sand",
                    "kind": "bin"
                }
            },
            "env":{ 
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "MANGOHUD": "1",
                "WINIT_UNIX_BACKEND": "wayland",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'falling-sand'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=falling-sand",
                    "--package=falling-sand"
                ],
                "filter": {
                    "name": "falling-sand",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}